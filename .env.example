# TGBot Environment Configuration Template
# Copy this file to .env.production or .env.test and fill in your values

# Environment
NODE_ENV=production

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username
ADMIN_CHAT_ID=your_admin_chat_id

# API Configuration
API_BASE_URL=https://tgbot-api.aiw3.ai
API_KEY=your_api_key_here
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Hyperliquid Configuration
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/tgbot.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Cache Configuration
CACHE_TOKEN_PRICE_TTL=300
CACHE_DEFAULT_TTL=600

# Application Configuration
PORT=3000
REQUEST_TIMEOUT=30000
MAX_REQUESTS_PER_MINUTE=100

# Push Configuration
PUSH_INTERVAL_MINUTES=15
PUSH_MAX_RETRIES=3
PUSH_BATCH_SIZE=50
PUSH_SCHEDULER_ENABLED=true
PUSH_TIMEZONE=Asia/Shanghai

# Trading Configuration
TRADING_DEFAULT_AMOUNT=10

# Health Check
HEALTH_ENABLED=true

# Docker Configuration
HOST_PORT=38080